<div class="successBlock">
  <h3>Success! Please use this link :</h3>
  <input type="text" value="localhost:3000/{{shorturls.shorten}}" id="copyText">
  <a href="/{{shorturls.shorten}}">localhost:3000/{{shorturls.shorten}}</a>
  <span class="copied">網址已複制</span>
  <div class="form-group text-center"> 
    <button class="btn btn-primary copy" style="width:20%">Copy</button>
    <a class="btn btn-primary back" href="/">Back</a>
  </div>
</div>
<script>
  const copyBtn=document.querySelector('.copy')
  const copyText = document.querySelector('#copyText')
  const copied = document.querySelector('.copied')

  copyBtn.addEventListener('click',function(){
    copied.classList.remove('copied')
    copyText.select();
    document.execCommand('copy');
  })

</script>
